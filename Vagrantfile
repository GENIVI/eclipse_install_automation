# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

# Apparently this needs to be specified if Vagrant has alternative options
# (trying this with other Vagrant providers is currently untested and users
#  must try that on their own._)
ENV['VAGRANT_DEFAULT_PROVIDER'] = 'virtualbox'

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

	puts 'NOTICE: Sorry, Vagrant usage is not supported on IONAS branch at the moment.
There is a user-interactive part in the installer script (script.sh)
that does not fit well with Vagrant provisioning.  You can use script.sh
natively on the host.'
        puts ""
        puts ""
end
